@model IEnumerable<ZenGrantsManager.Models.Organization>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrgName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.OrgState)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgCountry)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrgEmail)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.OrgLogo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrgName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.OrgState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrgCountry)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrgPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrgEmail)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>
        <td>
            <img src="@Url.Action("RetrieveImage", "Organizations", new { item.ID })" alt="Organization Logo" height=30 width=30/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
